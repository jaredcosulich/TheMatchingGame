%table{:style => "width:540px; margin: auto; border: 1px solid #ccc; font-family: arial;"}
  %tr
    %td
      %div{:style => "background-color: black; text-align: center; padding: 6px 0;"}
        = link_to(image_tag("http://#{Emailing.host}/images/logo_pink.png", :alt => "The Matching Game", :style => "border:none;", :size => "187x18"), root_url(:host => Emailing.host))
  %tr
    %td{:style => "padding: 6px;"}
      %table{:style => "width: 100%; font-size: 11pt;"}
        %tr
          %td{:style => "padding: 12px; border: 1px solid #ccc"}
            = yield

        = render :partial => "mailer/about"
          
  %tr
    %td
      %div{:style => "background-color: black; padding: 12px; text-align: center; color: white; font-size: 9pt; "}
        = link_to("Visit The Matching Game", root_url(:host => Emailing.host), :style => "color: white; text-decoration: none;")
        - if @emailing.present? && @combo.try(:college_id).nil?
          &nbsp; &nbsp; &nbsp;
          |
          &nbsp; &nbsp; &nbsp;
          = link_to("Unsubscribe From This Email", @emailing.auto_login_path(edit_account_path), :style => "color: white; text-decoration: none;")
