%ul{:style => "line-height: 2em;"}
  - @link_clicks.each do |link_click|
    %li= "#{link_to(link_click.link.source.player.id, admin_player_path(link_click.link.source.player))} clicked to <b>#{link_click.link.path}</b> from the #{link_click.link.source.name} on #{(link_click.created_at - 8.hours).strftime("%m/%d/%Y at %I:%M%p PST")}".html_safe


